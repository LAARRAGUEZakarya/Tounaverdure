@model GestionEmployes.ViewModel.CategorieProduitViewModel

@{
    ViewData["Title"] = "Create";
    Layout = null;
}

<link class="jsbin" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1/themes/base/jquery-ui.css" rel="stylesheet" type="text/css" />
<script class="jsbin" src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
<script class="jsbin" src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.0/jquery-ui.min.js"></script>
<script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
<meta charset=utf-8 />


<script>
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#ImgNew')
                    .attr('src', e.target.result);
            };

            reader.readAsDataURL(input.files[0]);
        }
    }

</script>

<img src="~/ImagesProducts/product-default.png" style="width: 150px; position: relative; left: 35%;" id="ImgNew" class="img-thumbnail " />
<form asp-action="Create" enctype="multipart/form-data">



    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


    <div class="form-group col">
        <h4>Desgination</h4>
        <input asp-for="Desgination" class="form-control" required />
        <span asp-validation-for="Desgination" class="text-danger"></span>
    </div>

    <div class="form-group col">
        <h4>Quantité</h4>
        <input asp-for="Quantite" type="number" class="form-control" min="1" required />
        <span asp-validation-for="Quantite" class="text-danger"></span>
    </div>
    <div class="form-group col">
        <h4>Type d'unité</h4>
        <input asp-for="typeUnite" type="text" class="form-control" required />
        <span asp-validation-for="typeUnite" class="text-danger"></span>
    </div>
    <div class="form-group col">
        <h4>Prix</h4>
        <input asp-for="Prix" type="number" class="form-control" min="1" required />
        <span asp-validation-for="Prix" class="text-danger"></span>
    </div>

    <div class="form-group col">
        <h4>Categorie</h4>
        <select asp-for="CategorieId"  class="form-control" asp-items="@(new SelectList(Model.Categories,"Id","Type"))"></select>
        <span asp-validation-for="CategorieId" class="text-danger"></span>
    </div>

    <div class="form-group col">
        <h4>Image</h4>
        <input type="file" name="File" asp-for="File" onchange="readURL(this);" accept="image/gif, image/jpeg, image/png" class="form-control" />
        <span asp-validation-for="File" class="text-danger"></span>

    </div>
    <br />

    <div class="form-group col row container">
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <input type="submit" value="Ajouter" class="btn btn-primary  col" />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <a onclick="hideModalLayout()" class="btn btn-secondary text-white  col">Retour a la list</a>
    </div>


</form>
<script src="~/JavaScript/myjs.js"></script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
