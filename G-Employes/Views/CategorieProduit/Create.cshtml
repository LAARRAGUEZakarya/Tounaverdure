@model GestionEmployes.Models.CategorieProduit

@{
    ViewData["Title"] = "Create";
    Layout = null;
}


<form asp-action="Create">

    <div class="form-group">
        <label asp-for="Type" class="control-label"></label>
        <input asp-for="Type" class="form-control" required />
    </div>
    <div class="form-group row container">
        <input type="submit" value="Ajouter" class="btn btn-primary col" />&nbsp;&nbsp;&nbsp;
        <input onclick="hideModalLayout()" value="Retour" class="btn btn-secondary text-white col" />
    </div>
</form>

<script src="~/JavaScript/myjs.js"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
