@model IEnumerable<GestionEmployes.Models.repositories.Categorie>

@{
    ViewData["Title"] = "Index";
}

<h3 class=" text-primary mb-2 mt-2">LISTE DES CATEGORIES</h3>
<div class="row">
     <div class="col-12">
          <div class="card">
                  <div class="card-body">

<p >
     <a data-toggle="modal" data-target="#exampleModalLong"  onclick="showInPopup('@Url.Action("Create","Categorie",null,Context.Request.Scheme)','Ajouter Categorie')" class="btn btn-success text-white mb-2"><i class="mdi mdi-plus-circle me-2"></i>Ajouter Categorie</a>
   
</p>
<table id="example" class="table table-striped " style="width:100%">
    <thead>
        <tr >
            <th>
                 FONCTIONNALITE
            </th>
            <th>
               
                 OUVRIERS
            </th>
            <th>
                ACTION
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fonctionnalite)
            </td>
                <td id="getEml">
            @foreach (var E in item.Employes){
                
                     @E.Nom.ToUpper() <text>&nbsp;</text> @E.Prenom.ToUpper()
                    
                     <br />
             
            }
          
            </td>
              <td class="table-action">
                 <a data-toggle="modal" data-target="#exampleModalLong"  onclick="showInPopup('@Url.Action("Edit","Categorie",new {id = @item.Id },Context.Request.Scheme)','Edite Categorie')" class="action-icon btn"><i class="mdi mdi-square-edit-outline"></i></a>
                 @*<a data-toggle="modal" data-target="#exampleModalLong"  onclick="showInPopup('@Url.Action("Details","Projet",new {id = @item.Id },Context.Request.Scheme)','Supprimer Projet')" class="action-icon btn"><i class="mdi mdi-eye"></i></a>*@
                <a  data-toggle="modal" data-target="#exampleModalLong"  onclick="showInPopup('@Url.Action("Delete","Categorie",new {id = @item.Id },Context.Request.Scheme)','Supprimer Categorie')"  class="action-icon btn "><i class="mdi mdi-delete"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>
</div>
</div>



                                         <!-- Modal Create-->
<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
        <button type="button" class="close" onclick="closemodal('#exampleModalLong')" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="modalcreate"> 
      </div>
      
    </div>
  </div>
</div>