@model GestionEmployes.Models.repositories.Equipe

@{
    ViewData["Title"] = "Edit";
    Layout = null;
}


<div class="row">
    <div class=" container">
        <form id="EditeEquipe">
       <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" id="Id" class="form-control" hidden/>
            <div class="form-group">
                <label >Nom Equipe</label>
                <input asp-for="Nom_equipe" id="Nom_equipe" class="form-control" />
                <span asp-validation-for="Nom_equipe" class="text-danger"></span>
            </div>
          
            @if (Model.Projet != null)
            {
                <div class="form-group mt-3" >
                    <input type="checkbox" id="AddProjet" value="@Model.Projet.Id" checked>
                  <label for="AddProjet">Ajouter equipe dans une projet</label> 
                </div>
            }
            else
            {
                <div class="form-group mt-3" >
                    <input type="checkbox" id="AddProjet">
                  <label for="AddProjet">Ajouter equipe dans une projet</label> 
                </div>
                
            }
            
            <div class="form-group" id="show-projet">
             
            </div>

            @if ( ViewBag.listomp != null )
            {
              <div class="form-group mt-3" >
                  <input type="checkbox" id="AddEmploye" checked>
                  <label for="AddEmploye">Ajouter des employes</label> 
                </div>
                <textarea id="w3review" style="display: none;">
                    @{
                          int i = 0 ; 
                    }
                    @foreach ( var item in ViewBag.listomp )
                        {
                           i++;
                        
                        if(i == ViewBag.listomp.Count)
                        {
<text>{"id":@item.Id,"text":"@item.Nom  @item.Prenom"}</text>
                        }
                        else
                        {
<text>{"id":@item.Id,"text":"@item.Nom  @item.Prenom"}&</text>
                        }
                        }
                    </textarea>
            }
            else
            {
                <div class="form-group mt-3" >
                  <input type="checkbox" id="AddEmploye" >
                  <label for="AddEmploye">Ajouter des employes</label> 
            </div>
            }
             

            <div class="form-group" id="show-employe">
             
            </div>



            <div class="form-group d-flex justify-content-center">
                @*<a type="button" class="btn btn-info mt-2" asp-action="Index"><i class="dripicons-chevron-left"></i>Retour</a>*@
                <input type="submit" value="Enregistrer" class="btn btn-success mt-2" asp-route-id="@Model.Id" />
            </div>
        </form>
        
    </div>
</div>

<script src="~/templ/MyJs.js"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
